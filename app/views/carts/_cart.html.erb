<article>
  <h2>Your Pragmatic Cart</h2>
  <table>

      <%= render(cart.line_items) %>
      <tfoot>
        <tr>
          <th colspan="2">Total:</th>
          <td class="price" id="total"><%= number_to_currency(cart.total_price) %></td>
        </tr>
      </tfoot>
  </table>

  <div class="actions">
    <%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?'}, remote: true %>
    <% if params[:action] == 'index' %>
        <%= button_to 'Checkout', new_order_path, method: :get, class: "checkout"%>
    <% elsif params[:action] == 'new' %>
        <%= button_to 'Checkout', new_order_path, method: :get, class: "checkout", id: "checkout-disabled", disabled: true %>
    <% end %>
  </div>
</article>
