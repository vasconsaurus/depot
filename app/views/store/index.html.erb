<% if notice %>
<aside id="notice"><%= notice %></aside>
<% end %>

<h1>Your Pragamatic Catalog</h1>
<% @count == nil ? @count = 0 : @count %>
<% if  @count >= 5 %>
  <p>count: <%= pluralize(@count, "visit") %></p>
<% end %>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <% if product.price == @product_new_price && product.id == @updated_product_id %>
        <li class='line-item-highlight'>
        <% else %>
        <li>
        <% end %>
          <%= link_to image_tag(product.image_url).html_safe, line_items_path(product_id: product), method: :post, remote: true %>
          <h2><%= product.title %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price) %>
            <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
          </div>
        </li>
      <%# <% end %> %>
    <% end %>
  <% end %>
</ul>
